*
    box-sizing: border-box
    margin: 0px
    padding: 0px

html, body
    height: 100%
    width: 100%

#controller
    position: absolute
    width: 100%
    height: 100%
    overflow: hidden

#left
    position:absolute;
    top:0;
    left:0;
    width:40%;
    height:100%;

    background: url("/controller/assets/circle.png") center center no-repeat;
    background-size: 180px 180px
    background-color: firebrick

    #stick-container
        position: absolute;
        top: 50%;
        left: 50%;

        margin-left: -100px;
        margin-top: -100px;

        width: 100%;
        height: 100%;


        #stick
            position: absolute;
            height: 80px;
            width: 80px;
            margin-left: 60px;
            margin-top: 60px;

            background: url("/controller/assets/stick.png") center center no-repeat;
            background-size: contain

#center
    margin-left:40%;
    margin-right:40%;
    height: 100%;
    background-color: thistle

    .button
        height: 25%
        text-align: center


#right
    position:absolute;
    right:0;
    top:0;
    padding:0;
    width:40%;
    height:100%;
    color:#333;
    background:#eaeaea;

    .top, .bottom
        height: 40%
        position: relative

    .middle
        height: 20%
        background-color: cadetblue

    .container
        width: 100%

    .left, .right
        width: 50%
        height: 100%
        float: left

    .slant-container
        position: absolute
        width: 50%
        height: 100%
        left: 50%

    .slant
        width: 100%
        height: 50%
        position: relative
        left: -50%

        background-color: navajowhite

    .slant-top
        transform: skewX(-30deg) translate(15px, 0px)
        -webkit-transform: skewX(-30deg) translate(15px, 0px)

    .slant-bottom
        transform: skewX(-30deg) translate(-15px, 0px)
        -webkit-transform: skewX(-30deg) translate(-15px, 0px)

    .slant-content
        /*don't skew content*/
        transform: skewX(30deg)
        -webkit-transform: skewX(30deg)

        text-align: center
    img
        height: 50%
        width: 50%
